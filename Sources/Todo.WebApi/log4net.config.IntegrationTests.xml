<?xml version="1.0" encoding="utf-8" ?>
<log4net>

    <appender name="IntegrationTests" type="log4net.Appender.FileAppender">
        <file value="Logs/todo.IntegrationTests.log"/>
        <appendToFile value="true"/>
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger %newline %message %newline"/>
        </layout>
    </appender>

    <root>
        <level value="ALL"/>
        <appender-ref ref="IntegrationTests"/>
    </root>

</log4net>