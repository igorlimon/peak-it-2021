<?xml version="1.0" encoding="utf-8" ?>
<log4net>

    <appender name="LocalDevelopment" type="log4net.Appender.FileAppender">
        <file value="Logs/todo.Development.log"/>
        <appendToFile value="false"/>
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger %newline %message %newline"/>
        </layout>
    </appender>

    <root>
        <level value="ALL"/>
        <appender-ref ref="LocalDevelopment"/>
    </root>

</log4net>